<%= simple_form_for [:admin, @property], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <% if categories_disabled? %>
    <%= f.input :category, disabled: true, input_html: { value: @property.category.name } %>
  <% else %>
    <%= f.input :category_id, collection: Category.select_options %>
  <% end %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_properties_path, :class => 'btn' %>
  </div>
<% end %>
