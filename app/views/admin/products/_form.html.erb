<%= simple_form_for [:admin, @product], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :price %>
  <%= f.input :publish_status, collection: publish_status_options %>
  <%= f.input :category_id, collection: Category.all %>
  <%= render partial: 'admin/categories/properties', locals: { properties: @product.products_properties } %>
  <div id="properties">
  </div>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_root_path, :class => 'btn' %>
  </div>
<% end %>
